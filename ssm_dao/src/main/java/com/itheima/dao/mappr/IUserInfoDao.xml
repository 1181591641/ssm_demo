<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.dao.IUserInfoDao">

    <resultMap id="userlist" type="userInfo">
        <id property="id" column="id"></id>
        <result property="email" column="email"></result>
        <result property="username" column="username"></result>
        <result property="password" column="password"></result>
        <result property="status" column="status"></result>
        <collection property="roles" column="id" javaType="java.util.List" select="com.itheima.dao.IRoleDao.findRoleById"/>
    </resultMap>

    <!--查询所有用户-->
<select id="findByUsername" resultMap="userlist" parameterType="String">
    select * from users where username=#{username}
</select>


</mapper>